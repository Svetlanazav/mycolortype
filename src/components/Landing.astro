<!-- ImageUploadContainer -->
<section class="py-16 px-4">
  <div class="container mx-auto max-w-4xl">
    <hgroup class="text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-primary-plum mb-4">
        Discover Your Perfect Palette
      </h2>
      <p class="text-primary-mauve text-base md:text-lg mb-2 max-w-2xl mx-auto">
        Analyze colors that define you, your personality and your style.
      </p>
    </hgroup>
    <ImageUploadContainer client:load />
  </div>
</section>

<!-- What is color analysis -->
<div id="coloranalysis" class="bg-white py-24 md:pt-16 bottom-auto">
  <div class="relative isolate">
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
      <h2
        class="text-pretty text-4xl font-semibold tracking-tight text-center text-primary-plum sm:text-5xl"
      >
        What Is Color Analysis?
      </h2>
      <div
        class="mx-auto flex max-w-2xl flex-col gap-16 px-6 py-16 ring-accent-rose sm:rounded-3xl sm:p-8 lg:mx-0 lg:max-w-none lg:flex-row lg:items-center lg:py-20 xl:gap-x-20 xl:px-20"
      >
        <img
          class="h-96 w-full flex-none rounded-2xl object-cover shadow-xl lg:aspect-square lg:h-auto lg:max-w-sm"
          src="public/pics/happywomen.jpeg"
          alt="Happy woman smiling around beautiful colors"
        />
        <div class="w-full flex-auto">
          <p class="mt-6 text-pretty text-lg/8 text-primary-mauve">
            Color analysis is a personalized approach to uncover the shades and
            tones that best complement your natural features—your skin tone, eye
            color, and hair.
          </p>
          <div class="mt-10 flex">
            <a href="/blog" class="text-sm/6 font-semibold text-accent-gold">
              Read more in our blog <span aria-hidden="true">&rarr;</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div
      class="absolute inset-x-0 -top-16 -z-10 flex transform-gpu justify-center overflow-hidden blur-3xl"
      aria-hidden="true"
    >
      <div
        class="aspect-[1318/752] w-[82.375rem] flex-none bg-gradient-to-r from-primary-sand to-accent-rose opacity-25"
        style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)"
      >
      </div>
    </div>
  </div>
</div>

<!-- How we do it -->
<section
  id="features"
  class="py-16 px-4 md:-top-64 bg-gradient-to-r from-primary-sand to-white"
>
  <div class="container mx-auto my-4 max-w-6xl">
    <h2
      class="my-8 text-pretty text-4xl font-semibold tracking-tight text-center text-primary-plum sm:text-5xl"
    >
      Why Choose Our Color Analysis?
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 py-8">
      <!-- Feature 1 -->
      <div
        class="group p-8 bg-white rounded-xl text-center shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
      >
        <div class="text-primary-mauve mb-6">
          <img
            class="w-24 h-24 mx-auto rounded opacity-90"
            src="public/icons/thinking.png"
            alt="AI Analysis Icon"
          />
        </div>
        <h4 class="text-accent-gold text-xl font-bold mb-3">AI-Powered</h4>
        <p class="text-primary-mauve leading-relaxed">
          Our advanced AI technology analyzes your features to create a
          perfectly matched color palette that enhances your natural beauty.
        </p>
      </div>

      <!-- Feature 2 -->
      <div
        class="group p-8 bg-primary-sand rounded-xl text-center shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
      >
        <div class="text-primary-mauve mb-6">
          <img
            class="w-24 h-24 mx-auto rounded opacity-90"
            src="public/icons/loved.png"
            alt="Personalization Icon"
          />
        </div>
        <h4 class="text-accent-gold text-xl font-bold mb-3">
          Personalized Approach
        </h4>
        <p class="text-primary-mauve leading-relaxed">
          Get customized color recommendations that match your skin tone, hair
          color, and personal style preferences.
        </p>
      </div>

      <!-- Feature 3 -->
      <div
        class="group p-8 bg-white rounded-xl text-center shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
      >
        <div class="text-primary-mauve mb-6">
          <img
            class="w-24 h-24 mx-auto rounded opacity-90"
            src="public/icons/ranking.png"
            alt="Easy Use Icon"
          />
        </div>
        <h4 class="text-accent-gold text-xl font-bold mb-3">Instant Results</h4>
        <p class="text-primary-mauve leading-relaxed">
          Receive your personalized color palette instantly, complete with
          styling tips and combination suggestions.
        </p>
      </div>
    </div>
  </div>
</section>

<CommentSection />

<!-- Footer -->
<footer id="contact" class="bg-primary-plum text-white py-6 px-4">
  <div class="container mx-auto text-center">
    <p class="text-sm">&copy; 2024 MyColorType. All rights reserved.</p>
    <p class="text-sm">Made with ❤️ for color enthusiasts.</p>
  </div>
</footer>
